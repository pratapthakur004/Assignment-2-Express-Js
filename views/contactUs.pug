center
  h4 Contact Us Form
  // Contact Us Form
.container.border-dark.col-md-4.formcontainer
    form(method='post' action='/postdata')
      // Name input
      .form-group
        label Full Name:
        input.form-control(type='text' name="firstName")
      // Email input
      .form-group
        label Email:
        input.form-control(type='email' name="email")
      // Mobile input
      .form-group
        label Mobile No:
        input.form-control(type='number' name="mobileNum")
      // Address input
      .form-group
        label Address:
        input.form-control(type='address' name="address")
        // Submit button
        input.form-control.btn-success(type='submit' value='Submit')
